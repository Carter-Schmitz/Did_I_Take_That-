<head>
  <meta charset="UTF-8">
  <titlemedication tracke></title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
  <script src="dist/pristine.js"  type="text/javascript"></script>
</head>

<body>
  <div class="home-container">
   
     
        <h1>Medication tracker</h1>
        <form class="new-med-form">
          
        <input id="name-box" name="med-name" type="text" placeholder="name" />
         <input id="dosage-box" name="med-dosage" type="text" placeholder="dosage" />
          <input id="frequency-box" name="med-frequency" type="text" placeholder="frequency" />
           <input id="taken-box" name="med-taken" type="text" placeholder="taken" />
           <input id="quantity-box" name="med-quantity" type="text" placeholder="quantity" />
           <button type="submit">Add Medication</button>
        </form>
    {{#each medications as |medication|}}
{{> meds}}
{{/each}}
  </div>
  {{#if logged_in}}
    <nav>
      <button class="btn" id="logout">logout</button>
    </nav>
    {{/if}}

    {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
  </body>

</html>

<script src="/js/add-med.js"></script>
