<head>
  <meta charset="UTF-8">
  <titlemedication tracker></title>
  <link rel="stylesheet" href="/css/jass.css">
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="home-container">
   
     
        <h1 class="login-heading">Medication Tracker</h1>
        <div class="form-group">
        <form class="new-med-form">
          
        <input id="name-box" class="form-control" name="med-name" type="text" placeholder="name" required data-pristine-required-message="Please enter a medication name." />
         <input id="dosage-box" class="form-control" name="med-dosage" type="text" placeholder="dosage" required data-pristine-required-message="Please enter a medication dosage." />
          <input id="frequency-box" class="form-control" name="med-frequency" type="number" placeholder="frequency (hours between doses)" required data-pristine-required-message="Please enter the number of hours between doses." />
           <input id="taken-box" class="form-control" name="med-taken" type="text" placeholder="taken" />
           <input id="quantity-box" class="form-control" name="med-quantity" data-pristine-type="number" placeholder="quantity" required data-pristine-required-message="Please enter the current quantity of this medication."/>
           <button type="submit">Add Medication</button>
        </form>
        </div>
        <div class="meds-container">

    {{#each medications as |medication|}}
{{> meds}}
{{/each}}
        </div>


        <h1 class="login-heading">Coming Soon</h1>
        <div class="coming-soon-container">

        <div class="reminder soon-box">
         <i class="fa-sharp fa-solid fa-bell"></i>
          <h2>Set A  Reminder</h2>
        </div>
        <div class="delivery soon-box">
         <i class="fa-solid fa-truck"></i>
          <h2>Prescription Delivery</h2>
        </div>
        </div>
  {{#if logged_in}}
    <nav>
      <button class="btn" id="logout">logout</button>
    </nav>
    {{/if}}
  </div>

    {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}

  <script src="/js/add-med.js"></script>
<script src="../public/js/pristine.min.js"  type="text/javascript"></script>
<script src="../public/js/pristine.js"  type="text/javascript"></script>
  </body>

</html>