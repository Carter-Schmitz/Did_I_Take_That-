<div class="signup-container">
  <h1 class="login-heading">Create An Account</h1>
  <form id="form1" class="signup-form">
    <div class="form-group">
    <input
      id="username-signup"
      class="form-control"
      type="text"
      placeholder="username"
      required data-pristine-required-message="Please choose a username"
    />
    </div>
  <div class="form-group">
    <input
      id="email-signup"
      class="form-control"
      data-pristine-type="email"
      placeholder="email"
    />
    </div>
    <div class="form-group">
       <input
      id="password-signup"
      type="password"
      data-pristine-pattern= "/^(?=.*?[A-Z])(?=.*?[a-z]).{8,}$/"
      class="form-control"
      data-pristine-pattern-message="Minimum 8 characters, at least one uppercase letter, one lowercase letter"
    />
    </div>
    <button class="loginbtn" type="submit">signup</button>
  </form>
  <a class="signupbtn" href="/login">Already Have an Account? Login </a>
</div>

<script src="/js/pristine.min.js"  type="text/javascript"></script>
<script src="/js/pristine.js"  type="text/javascript"></script>
<script src="/js/signup.js"></script>